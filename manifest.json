 {
  "manifest_version": 2,
  "name": "Weather Aggregator",
  "version": "1.0",
  
  "icons": {
    "128": "images/weather_big.png"
 },
  "content_scripts": [
    {
      "matches": [ "*://*/*" ],
      "js": [ "scripts/content.js" ]
    }
  ],
  "background": {
    "scripts": ["scripts/background.js"]
  },
   "permissions": [
     "activeTab",
     "storage"
   ],

    "browser_action": {
      "default_title": "Weather Aggregator",
      "default_icon":  "images/weather.png",
      "default_popup": "/index.html"
  }
	
}